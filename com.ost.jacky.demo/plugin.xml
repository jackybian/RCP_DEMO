<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="com.ost.jacky.demo.Application">
         </run>
      </application>
   </extension>
   
   <!--扩展perspectives-->
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="com.ost.jacky.demo.Perspective"
            name="Demo Perspective"
            id="com.ost.jacky.demo.perspective">
      </perspective>
   </extension>
   
   <!-- 扩展Views -->
   <extension
         point="org.eclipse.ui.views">
      <view
            class="com.ost.jacky.demo.View"
            name="View"
            id="com.ost.jacky.demo.view"
            inject="true">
      </view>
   </extension>
   
   
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="*">
         <view
               id="com.ost.jacky.demo.view"
               minimized="false"
               relationship="left"
               standalone="true"
               relative="org.eclipse.ui.editorss">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu">
         <menu
               label="File">
            <command
                  commandId="org.eclipse.ui.file.exit"
                  label="Exit">
            </command>
         </menu>
      </menuContribution>
   </extension>
   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            name="RCP Application"
            application="com.ost.jacky.demo.application">
         <property
               name="windowImages"
               value="icons/eclipse16.png,icons/eclipse32.png,icons/eclipse48.png,icons/eclipse64.png, icons/eclipse128.png,icons/eclipse256.png">
         </property>
         <property
               name="appName"
               value="RCP Application">
         </property>
      </product>
   </extension>

</plugin>
